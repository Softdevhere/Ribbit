<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/message_vertical_padding"
        android:paddingBottom="@dimen/message_vertical_padding"
        android:src="@drawable/ic_action_picture"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/senderNameLabel"
        android:layout_toRightOf="@+id/messageIcon"
        android:layout_toEndOf="@+id/messageIcon"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/message_vertical_padding"
        android:paddingBottom="@dimen/message_vertical_padding"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignBottom="@+id/messageIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/timeSentLabel"

        android:paddingBottom="@dimen/message_vertical_padding"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/message_vertical_padding"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="From:"
        android:id="@+id/fromLabel"
        android:paddingLeft="@dimen/activity_horizontal_margin"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/messageIcon"
        android:layout_toEndOf="@+id/messageIcon"
        />
</RelativeLayout>