<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="@style/_AppTheme"/>
    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- -->

    <style name="_AppTheme" parent="Theme.AppCompat.Light">

        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:windowActionBar">true</item>



        <!--&lt;!&ndash;text color&ndash;&gt;-->
        <!--<item name="android:textColorPrimary">@color/apptheme_color</item>-->

        <!--actionBar style-->
        <item name="actionBarStyle">@style/RibbitActionBarStyle</item>

        <!--tabbar and tabview style definition-->
        <item name="android:actionBarTabBarStyle">@style/RibbitTabBarStyle</item>
        <item name="actionBarTabBarStyle">@style/RibbitTabBarStyle</item>
        <item name="android:actionBarTabStyle">@style/RibbitTabStyle</item>
        <item name="actionBarTabStyle">@style/RibbitTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/RibbitTabTextStyle</item>
        <item name="actionBarTabTextStyle">@style/RibbitTabTextStyle</item>

        <!--actionbar overflow menu style-->
        <item name="android:actionOverflowButtonStyle">@style/RibbitOverflowButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/RibbitOverflowButtonStyle</item>

        <!--listview style-->
        <item name="android:listViewStyle">@style/listViewStyle</item>

        <!--gridview-->
        <item name="android:gridViewStyle">@style/gridViewStyle</item>

    </style>

    <!--actionbar-->
    <style name="RibbitActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <!-- action bar background -->
        <item name="background">@color/white</item>

        <!--action bar title text-->
        <item name="android:titleTextStyle">@style/RibbitTitleTextStyle</item>
        <item name="titleTextStyle">@style/RibbitTitleTextStyle</item>

        <!-- action bar elevation -->
        <item name="elevation">4dp</item>
        <!--logo-->
        <item name="logo">@drawable/ic_launcher</item>
        <item name="android:windowNoTitle">false</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

    <!--actionbar overflow button-->
    <style name="RibbitOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <!--title text style-->
    <style name="RibbitTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_colour_button</item>
    </style>
    <!--tabs-->
    <style name="RibbitTabStyle" parent="Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_ribbit</item>
    </style>

    <!--tab bar-->
    <style name="RibbitTabBarStyle" parent="Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:background">#6a4b95</item>
    </style>

    <!--tab text-->
    <style name="RibbitTabTextStyle" parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>

    </style>

    <!--listView style-->
    <style name="listViewStyle">
        <item name="android:background">@color/light_purple_background</item>
        <item name="android:divider">@null</item>
    </style>

    <!--gridView style-->
    <style name="gridViewStyle">
        <item name="android:background">@color/light_purple_background</item>
        <item name="android:padding">@dimen/user_grid_spacing</item>
    </style>

    <style name="AuthHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthCredentialsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/authHeading</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/login_vertical_setting</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_setting</item>
        <item name="android:paddingRight">@dimen/login_horizontal_setting</item>
        <item name="android:paddingTop">@dimen/login_vertical_setting</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>



        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textColor">@color/text_colour_button</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">17sp</item>
    </style>
    <!--<style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">-->
        <!--<item name="android:background">@drawable/apptheme_btn_default_holo_light</item>-->
    <!--</style>-->


</resources>
